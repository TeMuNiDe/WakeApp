<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="04"
        android:id="@+id/textHr"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:textSize="70sp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=":"
        android:id="@+id/colon"
        android:layout_alignTop="@+id/textHr"
        android:layout_toEndOf="@+id/textHr"
        android:layout_alignBottom="@+id/textHr"
        android:textStyle="bold"
        android:textSize="70sp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="04"
        android:id="@+id/textMin"
        android:layout_row="2"
        android:layout_column="3"
        android:textSize="70sp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/colon"
        android:layout_toEndOf="@+id/colon" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmState"
        android:gravity="center"
        android:checked="false"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textMin" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="am"
        android:id="@+id/textAp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/textMin"
        android:layout_toEndOf="@+id/textMin" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily"
        android:id="@+id/checkBox"
        android:layout_below="@+id/colon"
        android:layout_alignStart="@+id/textHr"
        android:checked="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_delete_24dp"
        android:layout_below="@+id/textMin"
        android:layout_alignEnd="@+id/alarmState" />

</RelativeLayout>